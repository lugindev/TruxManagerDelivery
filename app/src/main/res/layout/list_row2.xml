<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical"
    android:id="@+id/rowLayout">
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_marginRight="0dip">

    </LinearLayout>

    <!-- Immatriculation-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bon 567099787"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingLeft="5sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:layout_marginLeft="22sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_image" />

    <!-- Type de matÃ©riel -->
    <TextView
        android:id="@+id/detail"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:paddingTop="0sp"
        android:layout_marginLeft="20sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="23-10-2016 07:45"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/list_image" />

    <!-- image number -->
    <TextView
        android:gravity="center"
        android:id="@+id/status"
        android:layout_marginTop="20sp"
        android:paddingLeft="5sp"
        android:paddingRight="10sp"
        android:paddingBottom="15sp"
        android:paddingTop="0sp"
        android:layout_marginLeft="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 images"
        android:textSize="16sp"
        android:textColor="#1e3119"
        android:textStyle="bold"
        android:layout_below="@+id/detail"
        android:layout_toEndOf="@+id/list_image" />

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="60pt"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/separator2"
        android:layout_toEndOf="@+id/thumbnail"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:src="@drawable/img_photo" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#E0E0E0"
        android:id="@+id/separator2"
        android:layout_alignBottom="@+id/status"

        />



</RelativeLayout>